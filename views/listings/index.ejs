<% layout("/layouts/boilerplate") %> 

    <style>

        #filters{
            flex-wrap: wrap;
            align-items: center;
            gap: 1.5rem;
        }

        .filter-link,
        .filter-link:hover {
            text-decoration: none;
            color: inherit;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
            transition: transform 0.3s ease;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
            scale: 1.5;
            transform: scale(1.1);
            /* text-decoration: none;
            color: inherit; */
        }

        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
        }

        .tax-info{
            display: none;
        }

    </style>

    <div class="filters-bar">
    
        <a href="/listings?category=Trending" class="text-decoration-none text-dark">
        <div id="filters" class="collapse d-none d-md-flex">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
        </a>
        
        <a href="/listings?category=Rooms" class="text-decoration-none text-dark">
            <div class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
            </div>
        </a>

        <a href="/listings?category=Amazing Pools" class="text-decoration-none text-dark">
            <div class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing Pools</p>
            </div>
        </a>

        <a href="/listings?category=Farms" class="text-decoration-none text-dark">
            <div class="filter">
                    <div><i class="fa-solid fa-wheat-awn"></i></div>
                    <p>Farms</p>
            </div>
        </a>

        
        <a href="/listings?category=Iconic Cities" class="text-decoration-none text-dark">
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
        </a>


        <a href="/listings?category=Mountains" class="text-decoration-none text-dark">
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
        </a>

    
            <a href="/listings?category=Castles" class="text-decoration-none text-dark">
                <div class="filter">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Castles</p>
                </div>
            </a>

            <a href="/listings?category=Camping" class="text-decoration-none text-dark">
                <div class="filter">
                    <div><i class="fa-solid fa-tent"></i></div>
                    <p>Camping</p>
                </div>
            </a>

            <a href="/listings?category=Arctic" class="text-decoration-none text-dark">
                <div class="filter">
                    <div><i class="fa-regular fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>
            </a>


            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
                </div>
            </div>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

        <% if(allListings.length === 0){ %>
            <div class="text-center m-auto">
                <h4>No listings found ðŸ˜•</h4>
                <p>Try searching with a different keyword.</p>
            </div>
        <% } else { %>
            <% for(let listing of allListings){ %>
                <a class="listing-link" href="/listings/<%= listing._id %>">
                    <div class="card listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %> <br></b> 
                                &#x20B9 <%= listing.price.toLocaleString("en-IN") %> /night
                                <i class="tax-info">+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>  
            <% } %>
        <% } %> 

        
    </div>
    

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click" , ()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
                
            }else{
                info.style.display = "none";
            }
            
        }
    })
</script>


